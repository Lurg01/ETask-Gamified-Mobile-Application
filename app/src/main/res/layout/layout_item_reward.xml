<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_rewards"
    android:layout_margin="3dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:clickable="true"
    app:cardBackgroundColor="@color/satin">

    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="&#8942;"
        android:textStyle="bold"
        android:layout_marginEnd="5dp"
        android:textSize="30sp"
        android:id="@+id/txt_option_reward"
        android:layout_gravity="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="@color/green1"
            android:layout_width="100dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:background="@color/grand"
            android:src="@drawable/gift"
            android:id="@+id/img_rewards"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_rewardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Name"
                android:fontFamily="@font/abeezee"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="25sp" />
            <View
                android:layout_width="200dp"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="3dp"
                android:layout_height="2dp"
                android:background="@color/green1"
                />

            <LinearLayout
                android:id="@+id/stock_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/stock"/>

                <TextView
                    android:id="@+id/txt_rewardQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abeezee"
                    android:text="0"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_availableStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - Available in stock"
                android:layout_marginStart="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_rewardCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abeezee"
                    android:text="0"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/coin"/>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>