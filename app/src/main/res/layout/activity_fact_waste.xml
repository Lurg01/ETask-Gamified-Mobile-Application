<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FactWaste">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:text="Cardboard Facts"/>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#9bae57"
            android:layout_marginTop="10dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#8bbe1b"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@drawable/cb"/>

            <LinearLayout
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text=" Recycling cardboard only takes 75% of the energy required to make new cardboard, and around 80% of retailers and grocers recycle cardboard."/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/oil"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"

                    android:textAlignment="center"
                    android:text=" One ton of recycled cardboard saves 46 gallons of oil. One ton of recycled cardboard saves 9 cubic yards of landfill space "/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:textSize="20dp"
            android:text="Organic Facts"/>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#9bae57"
            android:layout_marginTop="10dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv4"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#8bbe1b"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@drawable/food1"/>

            <LinearLayout
                android:layout_gravity="end"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="Nearly half of the food in the U.S. goes to wasteâ€”approximately 3,000 pounds per second"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv3"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/food2"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:text="Only about 5% of food is diverted from landfill, and he U.S. produces approximately 34 million tons of food waste each year"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"

            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:text="Plastic Facts"/>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#9bae57"
            android:layout_marginTop="10dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv5"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#8bbe1b"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/plastic"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="Recycling plastic takes 88% less energy than making it from raw materials and bags take up to 1,000 years to decompose"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv6"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/bottle"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"

                    android:textAlignment="center"
                    android:text=" Only 23% of disposable water bottles are recycled"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:textSize="20dp"
            android:text="Glass Facts"/>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#9bae57"
            android:layout_marginTop="10dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv7"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#8bbe1b"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@drawable/glass1"/>

            <LinearLayout
                android:layout_gravity="end"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="Glass is 100% recyclable and can be recycled endlessly without loss in quality or purity"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv8"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/glass2"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:text=" More than 28 billion glass bottles and jars go to landfills every year. That's enough to fill two Empire State Buildings every three weeks"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"

            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:text="Paper Facts"/>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#9bae57"
            android:layout_marginTop="10dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv9"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#8bbe1b"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/paper"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="Recycling one ton of paper saves 7,000 gallons of water and  70% of the total waste in offices is paper waste"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv10"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/paper2"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"

                    android:textAlignment="center"
                    android:text="Recycling a stack of newspaper just 3 feet high saves one tree, Each ton of recycled paper can save 17 mature trees"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv11"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#7fa208"
            app:cardUseCompatPadding="true"


            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/wood2"

                />

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="Want to Read More... Click me"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>