<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FactRecycle">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginLeft="5dp"/>
        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#9bae57"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textStyle="bold"

            android:textSize="22dp"
            android:text="8 Easy Ways to Help the Environment"/>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#9bae57"
            android:layout_marginTop="10dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:textStyle="bold"
                android:textColor="#33cc5a"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:text="Know What to Throw"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@drawable/one"/>

            <LinearLayout
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13dp"

                    android:textAlignment="center"
                    android:text="It’s important to know what—and what not—to throw in our recycling bins. We can easily learn what’s recyclable and what’s not through community web sites and our local recycling companies."/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="#33cc5a"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:text="Recycle More in Our Homes"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/two"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="200dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"

                    android:text="Recyclable plastics can be found throughout our homes. Some examples include bottles in the bathroom (shampoo), jugs in the garage (windshield wiper fluid), and containers in the laundry room (detergent). "/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv3"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="#33cc5a"
                android:textSize="20dp"
                android:text="Recycle More Outside Our Homes"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@drawable/three"/>

            <LinearLayout
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:text="We should look for recycling bins at parks,beaches. If we can’t find one, it’s easy to hang on to our softdrink bottles, and other containers and carry them back home in the bag that brought them."/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv4"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textColor="#33cc5a"
                android:textSize="20dp"
                android:text=" Select Lighter Packaging"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/four"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="200dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"

                    android:text="We now can choose to buy lots of everyday things sealed in super thin, lightweight plastic packaging to lighten up on the environment. Less material can mean less packaging waste."/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv5"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="#33cc5a"
                android:textSize="20dp"
                android:text="Protect Our Leftovers"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@drawable/five"/>

            <LinearLayout
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13dp"

                    android:textAlignment="center"
                    android:text="Food waste is a big problem with huge environmental consequences. We can help reduce food waste by promptly refrigerating our leftovers in airtight storage containers or zipper bags that help seal out air and moisture."/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv6"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textColor="#33cc5a"
                android:textSize="20dp"
                android:text="Buy Recycled"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/six"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="200dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"

                    android:text="It’s easier than ever to find high-quality products made with recycled plastics, from kitchen tools to clothing to carpeting.  Burying used plastics in a landfill is a waste of valuable materials "/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv7"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="#33cc5a"
                android:textSize="20dp"
                android:text="Seal Our Homes"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@drawable/seven"/>

            <LinearLayout
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="180dp"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:text="We can help the environment and reduce our energy bills by taking simple steps to stop leaks in our homes that let in outdoor air, typically around doors and windows."/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv8"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#f2f5df"
            app:cardUseCompatPadding="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="#33cc5a"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:text="Focus on Fuel-Efficiency"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/eight"/>

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_width="220dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"

                    android:text="When we drive today’s modern cars, we already are participating in a far-reaching, ongoing effort to reduce fuel use and emissions: lightweighting. Automakers have been increasingly turning to lightweight, tough plastics to reduce the weight of our cars and trucks"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"

            android:textSize="20dp"
            android:text="Recycling Ideas for YOU!"/>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#9bae57"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            android:textStyle="bold"
            android:textColor="#33cc5a"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:text="Make a Plastic Bottle Planter"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv12"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#8bbe1b"
            app:cardUseCompatPadding="true"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/animal"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            android:textStyle="bold"
            android:textColor="#33cc5a"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:text="Start a Herb Garden With Empty 2-Liter Bottles"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv13"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#8bbe1b"
            app:cardUseCompatPadding="true"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/herb"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            android:textStyle="bold"
            android:textColor="#33cc5a"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:text="Reuse Plastic Bottles to Make a DIY Sprinkler"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv14"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#8bbe1b"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sprink"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            android:textStyle="bold"
            android:textColor="#33cc5a"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:text="Reuse Soda Bottles by Creating a Vertical Garden"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv15"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#8bbe1b"
            app:cardUseCompatPadding="true"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/garden"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            android:textStyle="bold"
            android:textColor="#33cc5a"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:text="Create a Piggy Bank Made From a Reused Plastic Bottle"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv16"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#8bbe1b"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pig"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv11"
            android:layout_width="350dp"
            android:layout_height="180dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#7fa208"
            app:cardUseCompatPadding="true"


            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/wood3"

                />

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:layout_width="180dp"
                android:layout_height="120dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="Want to Read More... Click me"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>